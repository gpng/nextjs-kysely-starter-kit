{
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/error.tsx",
    "src/app/**/route.ts",
    "src/scripts/*.ts"
  ],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/*.tests.{js,jsx,ts,tsx}",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/tests/**",
    "**/__tests__/**",
    "**/*.d.ts"
  ],
  "ignoreUnimported": ["src/db/**", "src/middleware.ts"],
  "ignoreUnused": ["next", "react", "react-dom"],
  "ignoreUnresolved": []
}
